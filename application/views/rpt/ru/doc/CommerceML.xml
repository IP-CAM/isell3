<?xml version="1.0" encoding="windows-1251"?>
<КоммерческаяИнформация ВерсияСхемы="2.03" ДатаФормирования="{$v->doc_view->tstamp}">
    <Документ>
        <Ид>{$v->doc_view->doc_id}</Ид>
        <Номер>{$v->doc_view->doc_num}</Номер>
        <Дата>{$v->doc_view->tstamp}</Дата>
        <ХозОперация>Заказ товара</ХозОперация>
        <Роль>Продавец</Роль>
        <Валюта>руб</Валюта>
        <Курс>1</Курс>
        <Сумма>{$v->footer->total}</Сумма>
        <Контрагенты>
            <Контрагент>
                <Ид>{$v->p->company_id}</Ид>
                <Наименование>{$v->p->label}</Наименование>
                <Роль>Покупатель</Роль>
                <ПолноеНаименование>{$v->p->company_name}</ПолноеНаименование>
                <Фамилия>{$v->p->company_person}</Фамилия>
                <Имя></Имя>
                <АдресРегистрации>
                    <Представление>{$v->p->company_jadress}</Представление>
                    <АдресноеПоле>
                        <Тип>Почтовый индекс</Тип>
                        <Значение>1111</Значение>
                    </АдресноеПоле>
                    <АдресноеПоле>
                        <Тип>Улица</Тип>
                        <Значение>ггг</Значение>
                    </АдресноеПоле>
                </АдресРегистрации>
                <Контакты/>
                <Представители>
                    <Представитель>
                        <Контрагент>
                            <Отношение>Контактное лицо</Отношение>
                            <Ид>{$v->a->company_person}</Ид>
                            <Наименование>{$v->a->company_person}</Наименование>
                        </Контрагент>
                    </Представитель>
                </Представители>
            </Контрагент>
        </Контрагенты>
        <Время></Время>
        <Комментарий>
            {$v->doc_view->doc_data}
        </Комментарий>
        <Товары>
            {loop name="v->rows"}
            <Товар>
                <Ид>{$value->product_code}</Ид>
                <Наименование>{$value->product_name}</Наименование>
                <БазоваяЕдиница Код="{$value->product_unit_code}" НаименованиеПолное="Штука" МеждународноеСокращение="{$value->product_unit_code_univ}">{$value->product_unit}</БазоваяЕдиница>
                <ЦенаЗаЕдиницу>{$value->product_price}</ЦенаЗаЕдиницу>
                <Количество>{$value->product_quantity}</Количество>
                <Сумма>{$value->product_sum}</Сумма>
                <ЗначенияРеквизитов>
                    <ЗначениеРеквизита>
                        <Наименование>ВидНоменклатуры</Наименование>
                        <Значение>Товар</Значение>
                    </ЗначениеРеквизита>
                    <ЗначениеРеквизита>
                        <Наименование>ТипНоменклатуры</Наименование>
                        <Значение>Товар</Значение>
                    </ЗначениеРеквизита>
                </ЗначенияРеквизитов>
            </Товар>
            {/loop}
        </Товары>
    </Документ>
</КоммерческаяИнформация>